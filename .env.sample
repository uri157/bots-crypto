# ===== Exchange / conexión =====
EXCHANGE=binance
POSITION_MODE=hedge
BINANCE_DUAL_SIDE=true
BINANCE_USE_TESTNET=false
# BINANCE_BASE_URL=            # (opcional) sobrescribe endpoint si lo necesitás

BINANCE_API_KEY=__REQUIRED__
BINANCE_API_SECRET=__REQUIRED__

# ===== Mercado / símbolos =====
SYMBOLS=BTCUSDT,ETHUSDT
TF_PRIMARY=1h
TF_SECONDARY=15m

# ===== Estrategia Momentum (indicadores / filtros) =====
EMA_FAST=50
EMA_SLOW=200
ATR_PERIOD=14
ADX_PERIOD=14
ADX_MIN=25

RISK_PCT_PER_TRADE=0.01
ATR_STOP_MULT=1.8
ATR_TRAIL_MULT=1.2
ATR_MIN_PCT_BTC=0.008
ATR_MIN_PCT_ETH=0.010

# ===== Filtro de funding =====
FUNDING_LONG_MAX=0.0
FUNDING_SHORT_MIN=0.0
USE_FUNDING_PERCENTILES=true
FUNDING_PCTL_LOOKBACK_DAYS=30
FUNDING_LONG_MAX_PCTL=40
FUNDING_SHORT_MIN_PCTL=60
NO_TRADE_FUNDING_WINDOW_S=120

# ===== Estrategia Basis =====
BASIS_UPPER=0.10
BASIS_LOWER=0.00
BASIS_TP=0.02
BASIS_SL=0.05
BASIS_CLOSE_DAYS_BEFORE=5

# (opcional) leverage configurable por estrategia
MOMENTUM_LEVERAGE=3
BASIS_LEVERAGE=3

# ===== Riesgo / salud del sistema =====
LOG_REALIZED_FUNDING=true
MARGIN_BUFFER_MIN=0.25
WS_MAX_DOWNTIME_S=60
LOSS_STREAK_LIMIT=3
DAILY_MAX_DD=-0.05
ORDER_LATENCY_MAX_MS=1000
ORDER_TIMEOUT_MS=2000
TIME_SYNC_SKEW_MS=250
MAX_OPEN_ORDERS=2

# ===== Runtime / servicio =====
MODE=paper
BOT_ID=momentum
CAPITAL_LOCK_KEY=capital:lock
HTTP_PORT=9001
ENABLE_MOMENTUM=true
ENABLE_BASIS=false

# ===== Infra (Redis / DB) =====
REDIS_URL=redis://redis:6379/0
DB_PATH=/app/data/trading.db

# ===== Alertas =====
TELEGRAM_BOT_TOKEN=__REQUIRED__
TELEGRAM_CHAT_ID=__REQUIRED__
